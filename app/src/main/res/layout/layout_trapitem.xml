<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id_textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Name"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_textViewHost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ubuntu"
        android:text="Host"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toStartOf="@+id/id_textViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/id_textViewTitle" />

    <TextView
        android:id="@+id/id_textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/ubuntu_light"
        android:text="Time"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toEndOf="@+id/id_textViewHost"
        app:layout_constraintTop_toTopOf="@+id/id_textViewHost" />

    <TextView
        android:id="@+id/id_textViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/ubuntu"
        android:text="Location"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toBottomOf="@+id/id_textViewTitle"
        app:layout_constraintStart_toEndOf="@+id/id_textViewTitle"
        app:layout_constraintTop_toTopOf="@+id/id_textViewTitle" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_textViewHost" />

</android.support.constraint.ConstraintLayout>